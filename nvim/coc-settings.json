{
  "clangd.enabled": true,
  "clangd.semanticHighlighting": true,
  "clangd.arguments": [
    "--clang-tidy",
    "--clang-tidy-checks=-*,bugprone*,modernize*,performance*,-modernize-use-trailing-return-type,-modernize-use-using,-modernize-avoid-c-arrays",
    "--pch-storage=memory",
    "-j=6",
    "--background-index",
    "--cross-file-rename",
    "--completion-parse=auto",
    "--index",
    "--completion-style=detailed"
  ]
}
